{
    "name": "vscode-wsdl2rest",
    "displayName": "wsdl2rest",
    "description": "A VS Code extension supporting wsdl2rest",
    "version": "0.0.1",
    "publisher": "camel-tooling",
    "engines": {
        "vscode": "^1.31.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.wsdl2rest"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.wsdl2rest",
                "title": "wsdl2rest: Create Camel Rest DSL configuration from WSDL file"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run clean && npm run fatjar && npm run compile",
        "fatjar": "mvn install -f ./wsdl2rest/pom.xml",
        "clean": "rm -rf out || rmdir out /s /q",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "preinstall": "node ./scripts/preinstall.js",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.12.18",
        "@types/sinon": "^7.0.4",
        "@types/sinon-chai": "^3.2.1",
        "assert": "^1.4.1",
        "chai": "^4.2.0",
        "fs": "^0.0.1-security",
        "gulp": "^4.0.0",
        "gulp-tslint": "^8.1.3",
        "mocha": "^5.2.0",
        "mvn-artifact-download": "^4.0.0",
        "request": "^2.88.0",
        "sinon": "^7.2.3",
        "sinon-chai": "^3.3.0",
        "tslint": "^5.12.1",
        "typescript": "^3.2.4",
        "vscode": "^1.1.29"
    },
    "dependencies": {
        "child_process": "^1.0.2",
        "expand-home-dir": "^0.0.3",
        "file-url": "^2.0.2",
        "find-java-home": "^0.2.0",
        "fs": "^0.0.1-security",
        "fs-extra": "^7.0.1",
        "path": "^0.12.7",
        "path-exists": "^3.0.0",
        "util": "^0.11.1",
        "soap": "^0.26.0"
    }
}
